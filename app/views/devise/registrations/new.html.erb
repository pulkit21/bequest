<div layout="column" flex="100">

  <div class="body-container">
    <div layout="row" layout-xs="column" flex="100">

      <div class="form-column" layout="column" flex="100" flex-xs="100">
        <div class="form-container">

          <h1>The Contact.</h1>
          <p class="margin-bottom-50">Enter your information below to receive a registration email.</p>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-row">
              <md-input-container flex="50" flex-sm="75" flex-xs="100" class="md-block">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true %>
              </md-input-container>
            </div>

            <div class="form-row">
              <div layout="row" flex="50" flex-sm="75" flex-xs="100">
                <md-input-container layout="column" flex="50" class="md-block">
                  <%= f.label :first_name %>
                  <%= f.text_field :first_name, autofocus: true %>
                </md-input-container>
                <md-input-container layout="column" flex="50" class="md-block">
                  <%= f.label :last_name %>
                  <%= f.text_field :last_name, autofocus: true %>
                </md-input-container>
              </div>
            </div>

            <div class="form-row">
              <md-input-container flex="50" flex-sm="75" flex-xs="100" class="md-block">
                <%= f.label :address %>
                <%= f.text_field :address, autofocus: true %>
              </md-input-container>
            </div>

            <div class="form-row">
              <md-input-container flex="50" flex-sm="75" flex-xs="100" class="md-block">
                <%= f.label :phone_number %>
                <%= f.text_field :phone_number, autofocus: true %>
              </md-input-container>
            </div>

            <div class="form-row">
              <div layout="row" flex="50" flex-sm="75" flex-xs="100">
                <md-input-container layout="column" flex="70" class="md-block">
                  <%= f.label :city %>
                  <%= f.text_field :city, autofocus: true %>
                </md-input-container>
                <md-input-container layout="column" flex="30" class="md-block">
                  <%= f.select :state, "<option>NY</option>".html_safe %>
                </md-input-container>
              </div>
            </div>

            <div class="form-row">
              <md-input-container flex="50" flex-sm="75" flex-xs="100" class="md-block">
                <%= f.label :zipcode %>
                <%= f.text_field :zipcode, autofocus: true %>
              </md-input-container>
            </div>
            <%= f.submit "Sign up", class: "md-primary md-button md-ink-ripple" %>
            <!-- <md-button type='submit' class="md-primary">Sign up</md-button>
          <% end %>
        </div>
      </div>

    </div>
  </div>

</div>
