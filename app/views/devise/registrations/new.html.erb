<div class="header-alt">
<a href="/" class="">
  <%= image_tag("/insurance/onboarding/img/bequest_favicon.png")%>
</a>
<h3 class="">Lets confirm your email.</h3>
</div>

<div class="body-container">
<div layout="column" flex="100">
  <div layout="row" layout-xs="column" flex="100">

      <div class="form-column" layout="column" flex-offset="30" flex-offset-sm="20" flex-offset-xs="0" flex="40" flex-sm="60" flex-xs="100">
        <div class="form-container">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <%= devise_error_messages! %>

              <div class="form-row">
                <md-input-container layout="column" flex="100" class="md-block">
                  <%= f.label :first_name %>
                    <%= f.text_field :first_name, autofocus: true %>
                </md-input-container>
            </div>

            <div class="form-row">
            <md-input-container flex="100" class="md-block">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, autofocus: true %>
            </md-input-container>
            </div>

            <div class="form-row">
            <md-input-container flex="100" class="md-block">
              <%= f.label :email %>
                <%= f.email_field :email, autofocus: true %>
            </md-input-container>
          </div>

            <div class="form-row">
              <md-input-container flex="100" class="md-block">
                <%= f.label :zipcode %>
                <%= f.text_field :zipcode, autofocus: true %>
              </md-input-container>
            </div>

            <div class="text-center">
            <%= f.submit "Sign up", class: "md-primary md-button md-ink-ripple" %>
            <!-- <md-button type='submit' class="md-primary">Sign up</md-button>
            </div>

          <% end %>
        </div>
        <div flex></div>
      </div>

    </div>
  </div>

</div>
