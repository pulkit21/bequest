<div class="header-alt">
<a href="/" class="">
  <%= image_tag("/insurance/onboarding/img/bequest_favicon.png")%>
</a>
<h3 class="">Lets confirm your email.</h3>
</div>

<div class="body-container">
<div layout="column" flex="100">
  <div layout="row" layout-xs="column" flex="100">

      <div class="form-column" layout="column" flex-offset="25" flex-offset-sm="15" flex-offset-xs="0" flex="50" flex-sm="70" flex-xs="100">
        <div class="form-container">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <div class="form-row">
              <div layout="row" flex="100">
                <md-input-container layout="column" flex="50" class="md-block">
                  <%= f.label :first_name %>
                    <%= f.text_field :first_name, autofocus: true %>
                </md-input-container>
                <md-input-container layout="column" flex="50" class="md-block">
                  <%= f.label :last_name %>
                    <%= f.text_field :last_name, autofocus: true %>
                </md-input-container>
              </div>
            </div>
            

                <div class="form-row">
                  <md-input-container flex="100" class="md-block">
                    <%= f.label :email %>
                      <%= f.email_field :email, autofocus: true %>
                  </md-input-container>
                </div>

                <div class="form-row">
                <md-input-container flex="100" class="md-block">
                  <%= f.label :zipcode %>
                    <%= f.text_field :zipcode, autofocus: true %>
                </md-input-container>
              </div>

                <div class="form-row">
                  <md-input-container flex="100" class="md-block">
                    <%= f.label :address %>
                      <%= f.text_field :address, autofocus: true %>
                  </md-input-container>
                </div>

                <div class="form-row">
                  <md-input-container flex="100" class="md-block">
                    <%= f.label :phone_number %>
                      <%= f.text_field :phone_number, autofocus: true %>
                  </md-input-container>
                </div>

                <div class="form-row">
                  <div layout="row" flex="100" >
                    <md-input-container layout="column" flex="70" class="md-block">
                      <%= f.label :city %>
                        <%= f.text_field :city, autofocus: true %>
                    </md-input-container>
                    
                    <md-input-container layout="column" flex="30" class="md-block">
                      <%= f.select :state, "<option>NY</option>".html_safe %>
                    </md-input-container>
                  </div>
                </div>

                <%= devise_error_messages! %>

                <br><br>
                <div class="text-center">
                <%= f.submit "Next", class: "md-primary md-button md-ink-ripple" %>
                </div>

          <% end %>
        </div>
        <div flex></div>
      </div>

    </div>
  </div>

</div>